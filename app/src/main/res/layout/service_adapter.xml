<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/service_card"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_margin="5dp"
        android:background="@drawable/callservice"
        android:elevation="16dp"
        android:outlineAmbientShadowColor="@color/cardview_shadow_start_color"
        android:outlineSpotShadowColor="@color/cardview_shadow_start_color"
        android:padding="10dp"

        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="10"
            android:background="@drawable/callservice"
            android:orientation="vertical">


            <TextView
                android:id="@+id/carr_out_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Call- out Service"
                android:textColor="#fff"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/service_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="₹ 500 Only*"
                android:textColor="#fff"
                android:textSize="28dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/book_callservice"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:background="@drawable/round_btn_yellow"
                android:elevation="8mm"
                android:gravity="center"
                android:text="Book Now"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

